<?xml version="1.0" encoding="UTF-8"?>
<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://jboss.org/schema/arquillian" xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

    <defaultProtocol type="Servlet 3.0" />

    <engine>
        <property name="maxTestClassesBeforeRestart">40</property>
    </engine>

    <container qualifier="jboss-as-7" default="true">
        <configuration>
            <property name="serverConfig">standalone-full.xml</property>
            <property name="javaVmArguments">-Xms128m -Xmx768m -XX:MaxPermSize=256m -ea</property>
        </configuration>
        <protocol type="Servlet 3.0">
            <property name="host">localhost</property>
            <property name="port">8080</property>
        </protocol>
    </container>

</arquillian>