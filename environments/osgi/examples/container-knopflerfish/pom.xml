        <dependency>
            <groupId>org.jboss.weld.osgi.examples</groupId>
            <artifactId>weld-osgi-web-fwk</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>org.jboss.weld.osgi.examples</groupId>
            <artifactId>weld-osgi-web-france</artifactId>
