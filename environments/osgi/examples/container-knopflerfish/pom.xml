        </dependency>

        <dependency>
            <groupId>org.jboss.weld.osgi.examples</groupId>
            <artifactId>weld-osgi-calculator-minus</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>org.jboss.weld.osgi.examples</groupId>
